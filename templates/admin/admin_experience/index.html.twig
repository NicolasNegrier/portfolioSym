{% extends 'base.html.twig' %}

{% block title %}Administration Experiences
{% endblock %}

{% block body %}

	<div class="section__title">
		<h2>Liste des expériences enregistrées</h2>
		<div>
			<a type="button" href="{{ path('admin_experience_create') }}">Ajouter</a>
		</div>
	</div>

	{% if experiences is null or experiences is empty %}
		Aucune experience n'est encore renseignée
	{% else %}
		<ul>
			{% for experience in experiences %}
				<li>
					<i class="fa-regular fa-floppy-disk"></i>
					<a href="{{ path('admin_experience_show', { 'id': experience.id }) }}">{{ experience.title}}
						chez
						{{ experience.society}}</a>
				</li>
			{% endfor %}
		</ul>
	{% endif %}

{% endblock %}
