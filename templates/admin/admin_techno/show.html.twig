{% extends 'base.html.twig' %}

{% block title %}Administration Techno
{% endblock %}

{% block body %}

	<div class="section__title">
		<h2>Détails de la techno / langage / outil
			{{ techno.name}}
		</h2>
		<a href="{{ path('admin_techno_edit', { 'id': techno.id }) }}" type="button">Modifier</a>
	</div>


	<div class="section__item">Nom :
		{{ techno.name}}</div>
	<div class="section__item">Logo :
		{{ techno.logo}}</div>
	<div class="section__item">Les projets associés :
		<ul>
			{% for project in techno.projects %}
				<li>{{ project.title}}</li>
			{% endfor %}
		</ul>
	</div>
	<div class="section__item">Les expériences associées :
		<ul>
			{% for experience in techno.experiences %}
				<li>{{ experience.title}}</li>
			{% endfor %}
		</ul>
	</div>

{% endblock %}
